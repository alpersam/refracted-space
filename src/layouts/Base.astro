---
import { ClientRouter } from "astro:transitions";

interface Props {
  title: string;
  description?: string;
  ogImage?: string;
}

const { title, description = "Writing on space engineering, Zurich, and identity.", ogImage } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <meta name="generator" content={Astro.generator} />

    <title>{title === "Home" ? "refracted.space" : `${title} — refracted.space`}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />

    <!-- Open Graph -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    {ogImage && <meta property="og:image" content={new URL(ogImage, Astro.site)} />}

    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link
      href="https://fonts.googleapis.com/css2?family=Syne:wght@600;700;800&family=Space+Grotesk:wght@300;400;500;600;700&family=JetBrains+Mono:wght@400;500&display=swap"
      rel="stylesheet"
    />

    <!-- Favicon -->
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />

    <ClientRouter />

    <style is:global>
      @import "../styles/global.css";
    </style>
  </head>
  <body>
    <header class="site-header">
      <nav class="container">
        <a href="/" class="site-logo" transition:persist>
          <img src="/logo.jpg" alt="refracted.space" class="logo-img" />
          <span class="logo-text">refracted<span class="dot">.</span>space</span>
        </a>
        <div class="nav-links">
          <a href="/blog" class="nav-link">Writing</a>
          <a href="/about" class="nav-link">About</a>
        </div>
      </nav>
    </header>

    <main transition:animate="slide">
      <slot />
    </main>

    <footer class="site-footer">
      <div class="container">
        <div class="footer-rule"></div>
        <div class="footer-content">
          <p class="mono">&copy; {new Date().getFullYear()} refracted.space</p>
          <p class="mono footer-location">Zürich, CH</p>
        </div>
      </div>
    </footer>

    <style>
      .site-header {
        position: sticky;
        top: 0;
        z-index: 100;
        background: rgba(10, 10, 10, 0.6);
        backdrop-filter: blur(20px) saturate(1.4);
        -webkit-backdrop-filter: blur(20px) saturate(1.4);
        border-bottom: 1px solid rgba(255, 255, 255, 0.06);
        box-shadow: 0 1px 24px rgba(0, 0, 0, 0.3);
      }

      .site-header nav {
        display: flex;
        align-items: center;
        justify-content: space-between;
        height: 4rem;
      }

      .site-logo {
        display: flex;
        align-items: center;
        gap: var(--space-3);
        transition: opacity var(--duration) var(--ease-out);
      }

      .site-logo:hover {
        opacity: 0.8;
        color: #ffffff;
      }

      .logo-img {
        width: 2rem;
        height: 2rem;
        border-radius: 50%;
        object-fit: cover;
        filter: grayscale(30%);
        transition: filter var(--duration) var(--ease-out),
          transform var(--duration) var(--ease-out);
      }

      .site-logo:hover .logo-img {
        filter: grayscale(0%);
        transform: scale(1.05);
      }

      .logo-text {
        font-family: var(--font-heading);
        font-size: var(--text-sm);
        font-weight: 700;
        letter-spacing: 0.02em;
        text-transform: uppercase;
        color: #ffffff;
      }

      .dot {
        color: var(--color-text-secondary);
        transition: color var(--duration) var(--ease-out);
      }

      .site-logo:hover .dot {
        color: #ffffff;
      }

      .nav-links {
        display: flex;
        gap: var(--space-8);
      }

      .nav-link {
        font-family: var(--font-heading);
        font-size: var(--text-sm);
        font-weight: 600;
        color: var(--color-text-secondary);
        letter-spacing: 0.02em;
        text-transform: uppercase;
        transition: color var(--duration) var(--ease-out);
        position: relative;
      }

      .nav-link::after {
        content: "";
        position: absolute;
        bottom: -2px;
        left: 0;
        width: 0;
        height: 1px;
        background: #ffffff;
        transition: width var(--duration) var(--ease-out);
      }

      .nav-link:hover {
        color: #ffffff;
      }

      .nav-link:hover::after {
        width: 100%;
      }

      .site-footer {
        padding: var(--space-16) 0 var(--space-8);
      }

      .footer-rule {
        border-top: 1px solid var(--color-border);
        margin-bottom: var(--space-6);
      }

      .footer-content {
        display: flex;
        justify-content: space-between;
        color: var(--color-text-secondary);
        font-size: var(--text-xs);
      }

      .footer-location {
        color: var(--color-text-secondary);
      }

      @media (max-width: 768px) {
        .nav-links {
          gap: var(--space-4);
        }

        .logo-text {
          font-size: var(--text-xs);
        }
      }
    </style>
  </body>
</html>
