---
import Base from "../layouts/Base.astro";

const projects = [
  {
    title: "refracted.space",
    description: "This website. A personal editorial blog built with Astro, plain CSS, and deployed on Cloudflare Pages.",
    tech: ["Astro", "CSS", "Cloudflare Pages"],
    url: "https://refracted.space",
  },
];
---

<Base title="Projects" description="Things I've built â€” space engineering, software, and everything between.">
  <section class="container page-header fade-up">
    <h1>Projects</h1>
    <p class="page-desc">Things I've built and am building.</p>
  </section>

  <section class="container projects fade-up stagger-2">
    <div class="project-grid">
      {projects.map((project) => (
        <a href={project.url} class="project-card" target={project.url.startsWith("http") ? "_blank" : undefined} rel={project.url.startsWith("http") ? "noopener noreferrer" : undefined}>
          <h2>{project.title}</h2>
          <p>{project.description}</p>
          <div class="project-tech">
            {project.tech.map((t) => (
              <span class="mono tech-tag">{t}</span>
            ))}
          </div>
        </a>
      ))}
    </div>
  </section>
</Base>

<style>
  .page-header {
    padding: var(--space-24) 0 var(--space-16);
  }

  .page-header h1 {
    font-size: var(--text-4xl);
    font-weight: 700;
    letter-spacing: -0.04em;
    margin-bottom: var(--space-4);
  }

  .page-desc {
    color: var(--color-text-secondary);
    max-width: 28rem;
    margin-bottom: 0;
  }

  .projects {
    padding-bottom: var(--space-24);
  }

  .project-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
    gap: 1px;
    background: var(--color-border);
    border: 1px solid var(--color-border);
  }

  .project-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-8);
    background: var(--color-bg);
    transition: background var(--duration) var(--ease-out),
      transform var(--duration) var(--ease-out);
  }

  .project-card:hover {
    background: var(--color-surface);
    color: var(--color-text);
  }

  .project-card h2 {
    font-size: var(--text-xl);
  }

  .project-card p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: 0;
    line-height: 1.5;
  }

  .project-tech {
    display: flex;
    flex-wrap: wrap;
    gap: var(--space-2);
    margin-top: var(--space-2);
  }

  .tech-tag {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    border: 1px solid var(--color-border);
    padding: 0.15em 0.5em;
    border-radius: 2px;
  }

  @media (max-width: 768px) {
    .project-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
