---
import Base from "../layouts/Base.astro";
import { getCollection } from "astro:content";

const posts = (await getCollection("blog"))
  .filter((post) => !post.data.draft)
  .sort((a, b) => b.data.date.valueOf() - a.data.date.valueOf());

const featured = posts[0];
const rest = posts.slice(1);
---

<Base title="Home">
  <!-- Hero -->
  <section class="hero container">
    <div class="hero-content fade-up">
      <h1>
        Refracting light<br />
        through space<span class="dot">.</span>
      </h1>
      <p class="hero-sub">
        Writing on space engineering, life in ZÃ¼rich, and the
        things that shape identity.
      </p>
    </div>
  </section>

  <!-- Featured post -->
  {featured && (
    <section class="featured container fade-up stagger-2">
      <div class="section-label mono">Latest</div>
      <a href={`/blog/${featured.id}`} class="featured-card">
        <div class="featured-meta">
          <time class="mono" datetime={featured.data.date.toISOString()}>
            {featured.data.date.toLocaleDateString("en-US", {
              year: "numeric",
              month: "short",
              day: "numeric",
            })}
          </time>

        </div>
        <h2 class="featured-title">{featured.data.title}</h2>
        <p class="featured-excerpt">{featured.data.description}</p>
        <span class="read-more mono">Read &rarr;</span>
      </a>
    </section>
  )}

  <!-- Post grid -->
  {rest.length > 0 && (
    <section class="posts-section container fade-up stagger-3">
      <div class="section-label mono">Archive</div>
      <div class="post-grid">
        {rest.map((post) => (
          <a href={`/blog/${post.id}`} class="post-card">
            <time class="mono" datetime={post.data.date.toISOString()}>
              {post.data.date.toLocaleDateString("en-US", {
                year: "numeric",
                month: "short",
              })}
            </time>
            <h3>{post.data.title}</h3>
            <p>{post.data.description}</p>

          </a>
        ))}
      </div>
    </section>
  )}
</Base>

<style>
  /* Hero */
  .hero {
    padding: var(--space-32) 0 var(--space-24);
  }

  .hero h1 {
    font-size: var(--text-5xl);
    font-weight: 800;
    line-height: 1.05;
    letter-spacing: -0.04em;
    margin-bottom: var(--space-6);
  }

  .dot {
    color: var(--color-text-secondary);
    transition: color var(--duration) var(--ease-out);
  }

  .hero-sub {
    font-size: var(--text-lg);
    color: var(--color-text-secondary);
    max-width: 28rem;
    line-height: 1.6;
    margin-bottom: 0;
  }

  /* Section labels */
  .section-label {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
    text-transform: uppercase;
    letter-spacing: 0.1em;
    margin-bottom: var(--space-6);
    padding-bottom: var(--space-3);
    border-bottom: 1px solid var(--color-border);
  }

  /* Featured */
  .featured {
    margin-bottom: var(--space-24);
  }

  .featured-card {
    display: block;
    padding: var(--space-8);
    border: 1px solid var(--color-border);
    transition: border-color var(--duration) var(--ease-out),
      background var(--duration) var(--ease-out),
      transform var(--duration) var(--ease-out);
  }

  .featured-card:hover {
    border-color: rgba(255, 255, 255, 0.15);
    background: var(--color-surface);
    color: var(--color-text);
    transform: translateY(-2px);
  }

  .featured-meta {
    display: flex;
    align-items: center;
    gap: var(--space-4);
    margin-bottom: var(--space-4);
  }

  .featured-meta time {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
  }

  .featured-title {
    font-size: var(--text-3xl);
    margin-bottom: var(--space-3);
  }

  .featured-excerpt {
    color: var(--color-text-secondary);
    max-width: 36rem;
    margin-bottom: var(--space-4);
  }

  .read-more {
    font-size: var(--text-xs);
    text-transform: uppercase;
    letter-spacing: 0.08em;
    color: var(--color-text-secondary);
    transition: color var(--duration) var(--ease-out),
      letter-spacing var(--duration) var(--ease-out);
  }

  .featured-card:hover .read-more {
    color: #ffffff;
    letter-spacing: 0.14em;
  }

  /* Post grid */
  .posts-section {
    margin-bottom: var(--space-24);
  }

  .post-grid {
    display: grid;
    grid-template-columns: repeat(auto-fill, minmax(20rem, 1fr));
    gap: 1px;
    background: var(--color-border);
    border: 1px solid var(--color-border);
  }

  .post-card {
    display: flex;
    flex-direction: column;
    gap: var(--space-3);
    padding: var(--space-6);
    background: var(--color-bg);
    transition: background var(--duration) var(--ease-out),
      transform var(--duration) var(--ease-out);
  }

  .post-card:hover {
    background: var(--color-surface);
    color: var(--color-text);
  }

  .post-card time {
    font-size: var(--text-xs);
    color: var(--color-text-secondary);
  }

  .post-card h3 {
    font-size: var(--text-lg);
    transition: letter-spacing var(--duration) var(--ease-out);
  }

  .post-card:hover h3 {
    letter-spacing: -0.01em;
  }

  .post-card p {
    font-size: var(--text-sm);
    color: var(--color-text-secondary);
    margin-bottom: 0;
    line-height: 1.5;
  }

  @media (max-width: 768px) {
    .hero {
      padding: var(--space-16) 0 var(--space-12);
    }

    .post-grid {
      grid-template-columns: 1fr;
    }
  }
</style>
